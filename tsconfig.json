{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["vitest", "node"],
    "outDir": "dist"
  },
  "include": ["src", "tests", "src/test", "src/test", "scripts"]
}
